<Window x:Class="DrawAndGuess.AddWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawAndGuess"
        mc:Ignorable="d"
        Title="AddWordWindow" Height="450" Width="800">
    <DockPanel>
        <ListBox x:Name="ListBox_Words" HorizontalAlignment="Left" Width="200" Margin="20"/>
        <Grid Margin="20">
            <StackPanel>
                <DockPanel>
                    <Button x:Name="Button_Add" Content="添加" FontSize="26" Padding="5" Margin="5" DockPanel.Dock="Right"
                            Click="Button_Add_Click"/>
                    <TextBox x:Name="TextBox_Word" FontSize="26"/>
                </DockPanel>
                <Border Height="14"/>
                <Button x:Name="Button_Delete" Content="删除选中项" FontSize="26" Click="Button_Delete_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
